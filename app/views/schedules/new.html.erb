<div class="container">
  <div class="scheduleContainer">
    <h3>予定の新規追加</h3>
    <p class="notice">タイトル、開始日、終了日は必須項目です</p>

    <%= render "shared/error", obj: @schedule %>

    <div class="formContainer">
      <%= form_with model: @schedule do |f| %>
        <div class="title">
            <%= f.label :title ,"タイトル" %>
            <%= f.text_field :title, class: "formStyle", placeholder: "タイトルを20文字以内で入力" %>
        </div>

        <div class="dateContainer">
          <div class="date">
            <%= f.label :start_date ,"開始日" %>
              <%= f.date_field :start_date, class: "formStyle" %>
          </div>

          <div class="date">
            <%= f.label :end_date ,"終了日" %>
            <%= f.date_field :end_date, class: "formStyle" %>
          </div>
        </div>

        <div class="allDay">
          <%= f.check_box :all_day %>
          <%= f.label :all_day ,"終日の場合はチェック" %>
        </div>
          
        <div class="memo">
          <%= f.label :memo ,"スケジュールメモ" %>
          <%= f.text_area :memo, class: "formStyle", placeholder: "500文字以内で入力" %>
        </div>

        <div class="buttonArea">
          <%= link_to "キャンセル", :schedules, class: "button whiteButton" %>
          <%= f.submit "保存", class: "button coloredButton"%>
        </div>
      </div>

    <% end %>
  </div>
</div>